<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">
        <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/name1FPTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academic Profile Section"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data : "
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="35dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="8dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rouned_border_edittext"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name: "
                                android:textSize="10sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>

                            <EditText
                                android:id="@+id/nameSPTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meet Patel"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:editable="false"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rouned_border_edittext"
                            android:layout_marginTop="15dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email Id: "
                                android:textSize="10sp"/>

                            <EditText
                                android:id="@+id/emailSPTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="19cp072@bvmengineering.ec.in"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:editable="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rouned_border_edittext"
                            android:layout_marginTop="15dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Department: "
                                android:textSize="10sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                />

                            <EditText
                                    android:id="@+id/deptSPTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Computer Engineering (CE)"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:editable="false"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/rouned_border_edittext"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Student Id No: "
                                    android:textSize="10sp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    />

                                <EditText
                                    android:id="@+id/sidSPTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="19CP072"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/black"
                                    android:editable="false"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/rouned_border_edittext"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Division: "
                                    android:textSize="10sp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp" />

                                <EditText
                                    android:id="@+id/divSPTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DIVISION - 3"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/black"
                                    android:editable="false"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rouned_border_edittext"
                            android:layout_marginTop="15dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Semester: "
                                android:textSize="10sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>

                            <EditText
                                android:id="@+id/semSPTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:editable="false"/>

                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/notificationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification : "
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"/>
            </LinearLayout>


        </ScrollView>
</FrameLayout>

